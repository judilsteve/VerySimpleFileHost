[Unit]
Description=Very Simple File Host

[Service]
Restart=always

WorkingDirectory=/usr/bin/vsfh
EnvironmentFile=/etc/vsfh/.env
User=vsfh

ExecStart=/usr/bin/vsfh/.venv/bin/python3 -m podman-compose start
ExecStop=/usr/bin/vsfh/.venv/bin/python3 -m podman-compose stop

[Install]
WantedBy=multi-user.target